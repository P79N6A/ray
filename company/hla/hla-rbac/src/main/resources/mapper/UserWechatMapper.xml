<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rongyi.mapper.UserWechatMapper">
	
	<delete id="deleteByUserId" parameterType="int">
		DELETE FROM user_wechat  WHERE user_id = #{userId,jdbcType=INTEGER}
	</delete>  
  	
  	<insert id="save">
  		 insert into user_wechat ( id,user_id,wechat_id )
	     values 
	 	 <foreach item="item" collection="wechatIds" separator=","  index="">
		     (null,#{userId,jdbcType=BIGINT},#{item,jdbcType=INTEGER})
		  </foreach>
  	</insert>
  	
</mapper>